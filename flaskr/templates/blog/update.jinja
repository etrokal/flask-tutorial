{% extends "base.jinja" %}

{% block header %}
  <h1>
    {% block title %}
      Update Post
    {% endblock title %}
  </h1>
{% endblock header %}

{% block content %}
  <form action="" method="post">
    <label for="title">Title</label>
    <input
      type="text"
      name="title"
      id="title"
      value="{{ request.form.title or title }}"
    />
    <label for="body">Body</label>
    <textarea name="body" id="body">{{ request.form.body or body }}</textarea>
    <input type="submit" value="Update" />
  </form>
  <hr />
  <form action="{{ url_for('blog.delete', id=id) }}" method="post">
    <input
      type="submit"
      value="Delete"
      class="danger"
      onclick="return confirm('Are you sure?');"
    />
  </form>
{% endblock content %}
